<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Lager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Lager.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Lager">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />
    <ShellContent
    Title="Produkt hinzufügen"
    ContentTemplate="{DataTemplate views:AddProducts}"
    Route="Produkt hinzufügen"/>
    <ShellContent
     Title="Produkt suchen"
     ContentTemplate="{DataTemplate views:SearchProducts}"
     Route="Produkt suchen"
        />
    <ShellContent
     Title="Produkt löschen"
     ContentTemplate="{DataTemplate views:DeleteProducts}"
     Route="Produkt löschen"
            />
 
</Shell>
