<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeineApp.Views.Inventory"
             Title="Lagerbestand">

    <StackLayout Padding="10">

        <Button Text="Produkte laden"
            Command="{Binding LadeProdukteCommand}"
            Margin="0,0,0,10" />

        <CollectionView ItemsSource="{Binding ProduktListe}">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10"
                 Margin="5"
                 BackgroundColor="White"
                 CornerRadius="10">

                        <StackLayout>

                            <Label Text="{Binding ProductName}"
                     FontAttributes="Bold"
                     FontSize="18" />

                            <Label Text="Artikelnummer: {Binding ArticleNumber}"
                     FontSize="14" />

                            <Label Text="Preis: {Binding ProductPrice, StringFormat='{}{0:C2}'}"
                     FontSize="14" />

                            <Label Text="Lagerbestand: {Binding ProductStock}"
                     FontSize="14" />

                        </StackLayout>

                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </StackLayout>

</ContentPage>
